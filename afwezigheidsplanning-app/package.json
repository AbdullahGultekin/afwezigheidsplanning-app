{
  "name": "pita-pizza-napoli",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main-simple.js",
  "scripts": {
    "start": "electron electron/main-simple.js",
    "start:simple": "electron electron/main-simple.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:exe": "electron-builder --win --x64 --config.win.target=dir"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.pitapizzanapoli.app",
    "productName": "Pita Pizza Napoli",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "app-simple/**/*",
      "package.json",
      "node_modules/xlsx/**/*",
      "!electron/**/*.md",
      "!electron/**/*.txt",
      "!**/node_modules/**/*",
      "!**/.git/**/*"
    ],
    "extraResources": [
      {
        "from": "app-simple",
        "to": "app-simple",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "asar": true,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "installerHeaderIcon": "public/favicon.ico",
      "shortcutName": "Pita Pizza Napoli"
    },
    "portable": {
      "artifactName": "Pita-Pizza-Napoli-Portable.exe"
    }
  }
}
